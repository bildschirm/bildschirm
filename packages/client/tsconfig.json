{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"]
		},
		"types": [],
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./dist",
		"emitDecoratorMetadata": true
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*"]
}
